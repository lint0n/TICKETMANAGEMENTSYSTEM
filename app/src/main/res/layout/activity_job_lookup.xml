<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_job_lookup"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="a13070817.ticketmanagementsystem.JobLookup">

    <EditText
        android:layout_height="wrap_content"
        android:inputType="none"
        android:ems="10"
        android:id="@+id/JobID"
        android:layout_width="100dp"
        android:layout_above="@+id/text_JobCustomer"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:inputType="textPersonName"
        android:ems="10"
        android:layout_above="@+id/text_JobCustomer"
        android:layout_alignLeft="@+id/text_JobCustomer"
        android:layout_alignStart="@+id/text_JobCustomer"
        android:id="@+id/JobEngineer" />

    <TextView
        android:text="@string/job_lookup_ID"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/text_JobID"
        android:layout_above="@+id/JobID"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:textAppearance="@style/TextAppearance.AppCompat" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="100dp"
        android:inputType="textCapSentences|textAutoCorrect"
        android:ems="10"
        android:id="@+id/JobDescription"
        android:layout_above="@+id/lookup_update_button"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_marginBottom="10dp"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true" />

    <TextView
        android:text="@string/job_lookup_description"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/text_JobDescription"
        android:layout_above="@+id/JobDescription"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:textAppearance="@style/TextAppearance.AppCompat" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:inputType="none|textPersonName"
        android:ems="10"
        android:id="@+id/JobAsset"
        android:layout_above="@+id/text_JobDescription"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_alignRight="@+id/JobID"
        android:layout_alignEnd="@+id/JobID" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:inputType="none"
        android:ems="10"
        android:id="@+id/JobCustomer"
        android:layout_alignBaseline="@+id/JobAsset"
        android:layout_alignBottom="@+id/JobAsset"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true" />

    <TextView
        android:text="@string/job_lookup_asset"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/text_JobAsset"
        android:layout_above="@+id/JobAsset"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:textAppearance="@style/TextAppearance.AppCompat" />

    <TextView
        android:text="@string/job_lookup_customer"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/text_JobCustomer"
        android:layout_above="@+id/JobCustomer"
        android:layout_alignLeft="@+id/JobCustomer"
        android:layout_alignStart="@+id/JobCustomer"
        android:textAppearance="@style/TextAppearance.AppCompat" />

    <CheckBox
        android:text="@string/lookup_checkbox"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/checkBox"
        android:layout_alignBaseline="@+id/lookup_update_button"
        android:layout_alignBottom="@+id/lookup_update_button"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <Button
        android:text="@string/lookup_update"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/lookup_update_button"
        android:onClick="updateJob"
        android:layout_alignParentBottom="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:layout_alignLeft="@+id/lookup_button"
        android:layout_alignStart="@+id/lookup_button" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:inputType="number"
        android:ems="10"
        android:id="@+id/job_lookup_input"
        android:textAppearance="@style/TextAppearance.AppCompat.Body1"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_alignRight="@+id/text_JobEngineer"
        android:layout_alignEnd="@+id/text_JobEngineer"
        android:layout_alignBottom="@+id/lookup_button"
        android:singleLine="true"
        android:hint="Enter Job ID" />

    <Button
        android:id="@+id/lookup_button"
        android:layout_width="85dp"
        android:layout_height="50dp"
        android:text="@string/job_lookup_button"
        android:layout_gravity="bottom"
        android:onClick="lookupJob"
        android:layout_alignParentTop="true"
        android:layout_toRightOf="@+id/text_JobCustomer"
        android:layout_marginLeft="19dp"
        android:layout_marginStart="19dp"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true" />

    <TextView
        android:text="@string/job_lookup_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/text_JobTitle"
        android:textAppearance="@style/TextAppearance.AppCompat"
        android:layout_above="@+id/JobTitle"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:inputType="none"
        android:ems="10"
        android:layout_above="@+id/text_JobID"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:id="@+id/editText"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true" />

    <TextView
        android:text="@string/job_lookup_created"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@+id/editText"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:id="@+id/editCreated"
        android:textAppearance="@style/TextAppearance.AppCompat" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:inputType="none"
        android:ems="10"
        android:id="@+id/JobTitle"
        android:layout_above="@+id/editCreated"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true" />

    <TextView
        android:text="@string/job_lookup_engineer"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/text_JobEngineer"
        android:textAppearance="@style/TextAppearance.AppCompat"
        android:layout_below="@+id/editText"
        android:layout_alignLeft="@+id/JobEngineer"
        android:layout_alignStart="@+id/JobEngineer" />


</RelativeLayout>
